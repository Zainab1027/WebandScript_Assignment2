        <!-- JavaScript for the navigation bar and scrolling effects -->
        <script>
          //toggle mobile navigation menu
          const navLines = document.querySelector(".header .navBar .navList .navLines");
          const menuItem = document.querySelectorAll(".header .navBar .navList ul li a");
          const head = document.querySelector(".header.container");
          const mobileMenu = document.querySelector(".header .navBar .navList ul");

          navLines.addEventListener("click", () => {
            navLines.classList.toggle("active");
            mobileMenu.classList.toggle("active");
          });

          //here we change the header background color on scroll
          document.addEventListener("scroll", () => {
            var scrollPosition = window.scrollY;
            if (scrollPosition < 250) {
              head.style.backgroundColor = "transparent";
            } else {
              head.style.backgroundColor = "#29323c";
            }
          });

          //here we close mobile menu when a navigation link is clicked
          menuItem.forEach((item) => {
            item.addEventListener("click", () => {
              mobileMenu.classList.toggle("active");
              navLines.classList.toggle("active");
            });
          });
        </script>
